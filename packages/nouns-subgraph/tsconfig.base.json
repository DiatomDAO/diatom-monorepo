{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "lib": ["esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitThis":true,
    "outDir": "build",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2020",
  },
  "exclude": ["**/build/"],
}
